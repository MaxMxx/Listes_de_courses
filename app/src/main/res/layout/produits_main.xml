<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProduitsActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="385dp"
        android:layout_height="59dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/buttonMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main" />

            <Button
                android:id="@+id/buttonProduits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produits" />

            <Button
                android:id="@+id/buttonRecettes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recettes" />

            <Button
                android:id="@+id/buttonListe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liste" />
        </TableRow>
    </TableLayout>


    <TableRow
        android:layout_width="336dp"
        android:layout_height="52dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="117dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="52dp"
            android:layout_height="44dp"
            app:srcCompat="@android:drawable/ic_menu_search" />

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </TableRow>

    <TableLayout
        android:id="@+id/produitsTableLayout"
        android:layout_width="387dp"
        android:layout_height="533dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="187dp"></TableLayout>

    <Button
        android:id="@+id/buttonCreateProduit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="624dp"
        android:text="CrÃ©er un produit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>